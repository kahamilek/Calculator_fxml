<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox spacing="10" alignment="CENTER" prefWidth="300" prefHeight="300" fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">

    <fx:define>
        <Font fx:id="FONT" size="18" />
        <Font fx:id="FONT2" size="12" />
    </fx:define>

    <StackPane alignment="CENTER">
        <Rectangle fill="TRANSPARENT" stroke="GRAY" width="230" height="50" />
        <Text fx:id="output" font="$FONT" />
    </StackPane>
    <StackPane alignment="CENTER">
        <Rectangle fill="transparent" stroke="white" width="230" height="30"/>
        <Text fx:id="helpOutput" font="$FONT2"/>
    </StackPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="7" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="8" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="9" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="/" prefWidth="50" font="$FONT" onAction="#operatorListener" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="4" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="5" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="6" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="*" prefWidth="50" font="$FONT" onAction="#operatorListener" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="1" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="2" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="3" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="-" prefWidth="50" font="$FONT" onAction="#operatorListener" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="0" prefWidth="50" font="$FONT" onAction="#numberListener" />
        <Button text="=" prefWidth="110" font="$FONT" onAction="#operatorListener" />
        <Button text="+" prefWidth="50" font="$FONT" onAction="#operatorListener" />
    </HBox>
</VBox>